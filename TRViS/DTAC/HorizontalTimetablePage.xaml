<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:TRViS.DTAC"
	x:Class="TRViS.DTAC.HorizontalTimetablePage"
	BackgroundColor="{x:Static local:DTACElementStyles.DefaultBGColor}">
	<Grid
		IgnoreSafeArea="True">
		<Grid.RowDefinitions>
			<RowDefinition x:Name="TitlePaddingViewHeight" Height="0"/>
			<RowDefinition Height="{x:Static local:ViewHost.TITLE_VIEW_HEIGHT}"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<BoxView
			x:Name="TitleBGBoxView"
			Grid.Row="0"
			Grid.RowSpan="2"
			Margin="-100,-100,-100,0"/>
		<BoxView
			x:Name="TitleBGGradientBox"
			CornerRadius="0"
			Grid.Row="0"
			Grid.RowSpan="2"
			Margin="0,0,0,30"/>

		<Button
			x:Name="BackButton"
			Grid.Row="1"
			Margin="8,4"
			Padding="0"
			HorizontalOptions="Start"
			VerticalOptions="Center"
			Text="&#xe5c4;"
			FontFamily="MaterialIconsRegular"
			FontSize="36"
			BackgroundColor="Transparent"
			Clicked="BackButton_Clicked" />

		<Label
			x:Name="TitleLabel"
			Grid.Row="1"
			Text="横型時刻表"
			FontFamily=""
			Margin="4,8"
			HorizontalOptions="Center"
			VerticalOptions="End"
			FontAttributes="Bold"
			FontSize="20" />

		<WebView
			x:Name="ContentWebView"
			Grid.Row="2"/>

		<Image
			x:Name="ContentImage"
			Grid.Row="2"
			IsVisible="False"
			Aspect="AspectFit"/>
	</Grid>
</ContentPage>
